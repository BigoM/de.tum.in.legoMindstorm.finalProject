import lejos.nxt.Button;
import lejos.nxt.SensorPort;
import lejos.nxt.addon.ColorSensor;


public class Test {
	
	public static void main(String[] args){
		ColorSensor c1 = new ColorSensor(SensorPort.S1);
		ColorSensor c2 = new ColorSensor(SensorPort.S2);
		
		
		Helper.drawString("c1 white", 0, 0);
		Button.waitForPress();
		c1.initWhiteBalance();
		
		Helper.drawString("c1 black",0,0);
		Button.waitForPress();
		c1.initBlackLevel();
		
		Helper.drawString("c2 white",0,0);
		Button.waitForPress();
		c2.initWhiteBalance();
		
		Helper.drawString("c2 black",0,0);
		Button.waitForPress();
		c2.initBlackLevel();
		
		c1.
		
		
		while(!Button.ESCAPE.isPressed()){
			int[] color1 = c1.getColor();
			Helper.drawColor(color1,0,0);
			int[] color2 = c2.getColor();
			Helper.drawColor(color2,0,1);
			
			int[] nColor1 = {c1.getNormalizedRed(),c1.getNormalizedGreen(),c1.getNormalizedBlue()};
			int[] nColor2 = {c2.getNormalizedRed(),c2.getNormalizedGreen(),c2.getNormalizedBlue()};
			
			Helper.drawColor(nColor1,0,2);
			Helper.drawColor(nColor2,0,3);
			
			Helper.drawInt(c1.getColorNumber(),0,4);
			Helper.drawInt(c2.getColorNumber(),0,5);
			
			try{
				Thread.sleep(500);
			}catch(InterruptedException ex){
				
			}
		}
		
		
	}
	
	
}